<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd"
      no-conversation-view-id="/admin/DemoPersonList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{demoPersonHome.wire}"/>

   <param name="demoPersonFrom"/>
   <param name="demoPersonId" value="#{demoPersonHome.demoPersonId}"/>


   <navigation from-action="#{demoPersonHome.persist}">
      <rule>
         <end-conversation/>
         <redirect view-id="/admin/DemoPerson.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{demoPersonHome.update}">
      <rule>
         <end-conversation/>
         <redirect view-id="/admin/DemoPerson.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{demoPersonHome.remove}">
      <rule>
         <end-conversation/>
         <redirect view-id="/admin/DemoPersonList.xhtml"/>
      </rule>
   </navigation>

</page>
