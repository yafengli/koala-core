<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd"
      no-conversation-view-id="/admin/AccountList.xhtml"
      login-required="false">
    <begin-conversation join="true" flush-mode="MANUAL"/>
    <action execute="#{accountHome.wire}"/>
    <param name="accountFrom"/>
    <param name="accountAid" value="#{accountHome.accountAid}"/>
    <navigation from-action="#{accountHome.persist}">
        <rule>
            <end-conversation/>
            <redirect view-id="/admin/Account.xhtml"/>
        </rule>
    </navigation>
    <navigation from-action="#{accountHome.update}">
        <rule>
            <end-conversation/>
            <redirect view-id="/admin/Account.xhtml"/>
        </rule>
    </navigation>
    <navigation from-action="#{accountHome.remove}">
        <rule>
            <end-conversation/>
            <redirect view-id="/admin/AccountList.xhtml"/>
        </rule>
    </navigation>
</page>
