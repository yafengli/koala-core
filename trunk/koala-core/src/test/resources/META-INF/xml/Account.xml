<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap
        PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
        "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="Account">

    <resultMap id="result" class="test.model.Account">
        <result property="aid" column="AID" columnIndex="1"/>
        <result property="aname" column="ANAME" columnIndex="2"/>
        <result property="adesc" column="ADESC" columnIndex="3"/>
        <result property="address" column="ADDRESS" columnIndex="4"/>
        <result property="adddesc" column="ADDDESC" columnIndex="4"/>
    </resultMap>

    <select id="_findbyid" resultMap="result">
        select ACCOUNT.AID,ACCOUNT.ANAME, ACCOUNT.ADESC,ACCOUNT.ADDRESS,ACCOUNT.ADDDESC from HBM_ACCOUNT as ACCOUNT where
        ACCOUNT.AID = #value#
    </select>

    <insert id="_save" parameterClass="test.model.Account">
        insert into HBM_ACCOUNT (AID,ANAME,ADESC,ADDRESS) values (#aid#,#aname#,#adesc#,#address#)
    </insert>
</sqlMap>